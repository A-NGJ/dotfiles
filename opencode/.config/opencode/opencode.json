{
  "$schema": "https://opencode.ai/config.json",
  "permission": {
    "read": "allow",
    "edit": "ask",
    "bash": {
      "*": "ask",
      "git status*": "allow",
      "git log*": "allow",
      "git diff*": "allow",
      "git show*": "allow",
      "git branch*": "allow",
      "git tag*": "allow",
      "git remote*": "allow",
      "git rev-parse*": "allow",
      "git ls-files*": "allow",
      "git ls-tree*": "allow",
      "git ls-remote*": "allow",
      "git describe*": "allow",
